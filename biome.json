{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "include": [
      "apps/**/*.js",
      "apps/**/*.ts",
      "apps/**/*.vue",
      "packages/**/*.js",
      "packages/**/*.ts",
      "**/*.json",
      "apps/**/*.html",
      "apps/**/*.css"
    ],
    "ignore": []
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingCommas": "all",
      "lineEnding": "crlf"
    },
    "globals": []
  }
}
